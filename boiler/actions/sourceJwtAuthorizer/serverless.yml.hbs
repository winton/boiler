service: {{name}}

plugins:
  - serverless-offline

provider:
  name: aws
  runtime: nodejs10.x
  iamRoleStatements:
    - Effect: Allow
      Action:
        - ssm:GetParameter
      Resource:
        - 'Fn::Join':
          - ':'
          - - 'arn:aws:ssm'
            - Ref: 'AWS::Region'
            - Ref: 'AWS::AccountId'
            - 'parameter/{{name}}-${opt:stage, self:provider.stage}/privateKey'

functions:
  {{lib}}:
    handler: dist/cjs/index.authorizer
    cors: true
    environment:
      STAGE: ${opt:stage, self:provider.stage}

resources:
  Outputs:
    {{class}}LambdaFunctionQualifiedArn:
      Export:
        Name: {{lib}}Arn
